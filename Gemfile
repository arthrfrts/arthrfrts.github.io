source 'https://rubygems.org'

gem "jekyll", "~> 4.2"

gem "jekyll-github-metadata", group: :jekyll_plugins
gem "jekyll-octicons", group: :jekyll_plugins
gem "jemoji", group: :jekyll_plugins

